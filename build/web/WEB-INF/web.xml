    <welcome-file-list>
        
             <welcome-file>JSP/Index/index.html</welcome-file>
             <welcome-file>JSP/Login_Signup/Login.html</welcome-file>
             <welcome-file>JSP/Login_Signup/Signup.html</welcome-file>
             
             <welcome-file>JSP/Website/admin/account_details.jsp</welcome-file> <welcome-file>JSP/Website/admin/account_edit.jsp</welcome-file>
             <welcome-file>JSP/Website/admin/account_search.jsp</welcome-file> <welcome-file>JSP/Website/admin/account_transaction.jsp</welcome-file>
